<div class="page-container">
  <!-- Header Section -->
  <div class="page-header">
    <div class="gradient-header animate-fade-in">
      <div class="flex-between">
        <div>
          <h1 class="text-shadow" style="font-size: var(--font-size-3xl); font-weight: 700; margin: 0; margin-bottom: var(--spacing-2);">
            ðŸ‘¥ <%= t('nav.user_groups', default: 'User Groups') %>
          </h1>
          <p style="margin: 0; opacity: 0.9; margin-bottom: var(--spacing-4);">
            <%= t('groups.manage_description', default: 'Manage user groups for targeting feature flags using secure JMESPath expressions') %>
          </p>
          <div class="flex-start gap-6" style="font-size: var(--font-size-sm); opacity: 0.8;">
            <div class="flex-start gap-2">
              <div style="width: 0.5rem; height: 0.5rem; background: rgba(255,255,255,0.7); border-radius: 50%;"></div>
              <span><%= t('groups.total', default: 'Total') %>: <%= @groups.count %></span>
            </div>
            <div class="flex-start gap-2">
              <div style="width: 0.5rem; height: 0.5rem; background: var(--color-success-400); border-radius: 50%;"></div>
              <span><%= t('groups.secure', default: 'Secure JMESPath') %></span>
            </div>
          </div>
        </div>
        <div style="flex-shrink: 0;">
          <%= link_to new_group_path, class: "btn btn-secondary animate-scale" do %>
            <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
            </svg>
            <%= t('groups.create_group', default: 'Create Group') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if @groups.any? %>
    <!-- Modern Cards Grid -->
    <section class="feature-grid animate-fade-in">
      <% @groups.each do |group| %>
        <div class="feature-card animate-slide-up">
          <div class="feature-card-body">
            <!-- Group Header -->
            <div class="flex-between" style="margin-bottom: var(--spacing-4); align-items: flex-start;">
              <div style="flex: 1;">
                <h3 style="font-size: var(--font-size-lg); font-weight: 600; color: var(--color-neutral-800); margin: 0 0 var(--spacing-1) 0;">
                  <%= group.name %>
                </h3>
                <p style="font-size: var(--font-size-sm); color: var(--color-neutral-600); margin: 0; display: flex; align-items: center; gap: var(--spacing-1);">
                  <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                  </svg>
                  <%= t('common.created', default: 'Created') %> <%= time_ago_in_words(group.created_at) %> <%= t('common.ago', default: 'ago') %>
                </p>
              </div>

              <!-- Security Badge -->
              <div style="flex-shrink: 0; margin-left: var(--spacing-4);">
                <span class="badge badge-success">
                  <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  JMESPath
                </span>
              </div>
            </div>

            <!-- Expression Display -->
            <div style="margin-bottom: var(--spacing-4);">
              <h4 style="font-size: var(--font-size-xs); font-weight: 500; color: var(--color-neutral-500); text-transform: uppercase; letter-spacing: 0.05em; margin: 0 0 var(--spacing-2) 0;">
                <%= t('groups.expression', default: 'Expression') %>
              </h4>
              <div style="background: var(--color-neutral-100); border: 1px solid var(--color-neutral-300); border-radius: var(--radius-lg); padding: var(--spacing-3); font-size: var(--font-size-sm);">
                <code style="color: var(--color-neutral-800); font-family: var(--font-mono); font-weight: 500;"><%= group.definition %></code>
              </div>
            </div>

            <!-- Usage Info -->
            <div style="margin-bottom: var(--spacing-4);">
              <div class="flex-between" style="font-size: var(--font-size-sm); align-items: center;">
                <span style="color: var(--color-neutral-500);"><%= t('groups.usage_in_rules', default: 'Usage in rules') %></span>
                <span class="badge <%= group.rule_count > 0 ? 'badge-primary' : '' %>" <%= group.rule_count == 0 ? 'style="background: var(--color-neutral-100); color: var(--color-neutral-600);"' : '' %>>
                  <% if group.rule_count > 0 %>
                    <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"/>
                    </svg>
                  <% else %>
                    <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                  <% end %>
                  <%= pluralize(group.rule_count, 'rule') %>
                </span>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="feature-card-actions">
            <div class="flex-start gap-2">
              <%= link_to edit_group_path(group), class: "btn btn-ghost btn-sm" do %>
                <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                </svg>
                <%= t('common.edit', default: 'Edit') %>
              <% end %>
            </div>

            <%= link_to group, method: :delete, data: { confirm: t('groups.delete_confirm', default: 'Are you sure you want to delete this group?') },
                       class: "btn btn-ghost btn-sm", style: "color: var(--color-error-600); border-color: var(--color-error-300);" do %>
              <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <%= t('common.delete', default: 'Delete') %>
            <% end %>
          </div>
        </div>
      <% end %>
    </section>
  <% else %>
    <!-- Empty State -->
    <section class="flex-center animate-fade-in" style="padding: var(--spacing-16) 0;">
      <div class="card" style="max-width: 32rem; margin: 0 auto; text-align: center;">
        <div class="card-body">
          <div class="flex-center" style="width: 5rem; height: 5rem; background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600)); border-radius: 50%; margin: 0 auto var(--spacing-6) auto;">
            <svg style="width: 2.5rem; height: 2.5rem; color: white;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>

          <h3 style="font-size: var(--font-size-xl); font-weight: 600; color: var(--color-neutral-800); margin: 0 0 var(--spacing-3) 0;">
            <%= t('groups.empty_state.title', default: 'No user groups yet') %>
          </h3>
          <p style="color: var(--color-neutral-600); margin: 0 0 var(--spacing-8) 0;">
            <%= t('groups.empty_state.description', default: 'Get started by creating your first user group with secure JMESPath expressions to target specific users for your feature flags.') %>
          </p>

          <%= link_to new_group_path, class: "btn btn-primary animate-scale" do %>
            <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
            </svg>
            <%= t('groups.empty_state.cta', default: 'Create Your First Group') %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>
</div>