<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="bg-gradient-to-r from-slate-700 to-slate-800 rounded-2xl p-8 text-white">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-shadow">✏️ Edit Feature Flag</h1>
          <p class="mt-2 text-gray-100">Modify "<%= @flag.name %>" and its configuration</p>
        </div>
        <div class="flex-shrink-0">
          <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center transform rotate-3">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= form_with model: @flag, local: true, class: "space-y-8" do |form| %>
    <% if @flag.errors.any? %>
      <div class="bg-red-50 rounded-xl border border-red-200 p-6">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @flag.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Basic Information Card -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-200">
      <div class="p-8">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-gradient-to-r from-slate-600 to-slate-700 rounded-lg flex items-center justify-center mr-4">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-gray-900">Basic Information</h3>
            <p class="text-sm text-gray-600">Update the essential details of your feature flag</p>
          </div>
        </div>

        <div class="space-y-6">
          <div>
            <%= form.label :name, "Flag Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
                </svg>
              </div>
              <%= form.text_field :name,
                                  class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200" %>
            </div>
          </div>

          <div>
            <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description,
                               rows: 4,
                               class: "block w-full py-3 px-4 border border-gray-300 rounded-xl bg-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-200" %>
          </div>

          <div class="flex items-center space-x-3">
            <%= form.check_box :enabled, class: "w-5 h-5 text-indigo-600 bg-gray-100 border-gray-300 rounded focus:ring-indigo-500 focus:ring-2" %>
            <%= form.label :enabled, "Enabled", class: "text-sm font-medium text-gray-700" %>
          </div>
          <p class="text-sm text-gray-600">When disabled, this flag will always return false regardless of rules.</p>
        </div>
      </div>
    </div>


    <!-- Action Buttons -->
    <div class="flex items-center justify-between pt-6">
      <%= link_to @flag, class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 transition-all duration-200 shadow-sm" do %>
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0L2.586 11H9a1 1 0 100-2H2.586l3.707-3.707a1 1 0 00-1.414-1.414l-5.414 5.414a1 1 0 000 1.414l5.414 5.414a1 1 0 001.414 0z" clip-rule="evenodd"/>
        </svg>
        Cancel
      <% end %>

      <%= form.submit "Update Feature Flag", class: "inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-slate-700 to-slate-800 hover:from-slate-800 hover:to-slate-900 transition-all duration-200 transform hover:scale-105 shadow-lg" %>
    </div>
  <% end %>
</div>