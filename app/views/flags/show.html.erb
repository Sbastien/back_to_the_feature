<div class="page-container">
  <!-- Header Section -->
  <div class="page-header">
    <div class="gradient-header animate-fade-in">
      <div class="flex-between">
        <div style="flex: 1;">
          <div class="flex-start gap-3" style="margin-bottom: var(--spacing-2); align-items: center;">
            <h1 class="text-shadow" style="font-size: var(--font-size-3xl); font-weight: 700; margin: 0;">
              ðŸš© <%= @flag.name %>
            </h1>
            <!-- Status Badge -->
            <% if !@flag.enabled? %>
              <span class="badge" style="background: var(--color-error-100); color: var(--color-error-700);">
                <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <%= t('flags.disabled', default: 'Disabled') %>
              </span>
            <% elsif @flag.rules.any? %>
              <span class="badge badge-success">
                <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <%= t('flags.active', default: 'Active') %>
              </span>
            <% else %>
              <span class="badge" style="background: var(--color-warning-100); color: var(--color-warning-800);">
                <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
                <%= t('flags.no_rules', default: 'No Rules') %>
              </span>
            <% end %>
          </div>
          <p style="color: rgba(255,255,255,0.9); font-size: var(--font-size-lg); margin: 0 0 var(--spacing-4) 0;"><%= @flag.description %></p>
          <div class="flex-start gap-6" style="font-size: var(--font-size-sm); opacity: 0.8;">
            <div class="flex-start gap-2">
              <svg style="width: 1rem; height: 1rem;" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"/>
              </svg>
              <span><%= pluralize(@rules.count, 'rule') %></span>
            </div>
          </div>
        </div>

        <div style="flex-shrink: 0; margin-left: var(--spacing-8);">
          <div style="display: flex; flex-direction: column; gap: var(--spacing-3);">
            <%= button_to @flag, method: :patch, params: { flag: { enabled: !@flag.enabled? } },
                          class: "btn #{@flag.enabled? ? 'btn-error' : 'btn-success'} animate-scale" do %>
              <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                <% if @flag.enabled? %>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                <% else %>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                <% end %>
              </svg>
              <%= @flag.enabled? ? t('flags.disable', default: 'Disable Flag') : t('flags.enable', default: 'Enable Flag') %>
            <% end %>

            <%= link_to edit_flag_path(@flag), class: "btn btn-secondary animate-scale" do %>
              <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
              </svg>
              <%= t('common.edit', default: 'Edit Flag') %>
            <% end %>
            <%= link_to new_flag_rule_path(@flag), class: "btn btn-primary animate-scale" do %>
              <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
              </svg>
              <%= t('rules.add_rule', default: 'Add Rule') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="animate-fade-in main-section">
    <!-- Rules Card -->
    <div class="card animate-slide-up">
      <div class="card-body">
        <div class="flex-start" style="margin-bottom: var(--spacing-6);">
          <div class="flex-center" style="width: 2.5rem; height: 2.5rem; background: linear-gradient(135deg, var(--color-neutral-600), var(--color-neutral-700)); border-radius: var(--radius-lg); margin-right: var(--spacing-4);">
            <svg style="width: 1.25rem; height: 1.25rem; color: white;" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <h3 class="card-title"><%= t('rules.evaluation_rules', default: 'Evaluation Rules') %></h3>
            <p class="card-description"><%= t('rules.evaluation_desc', default: 'Rules evaluated in order - first match wins') %></p>
          </div>
        </div>

        <% if @rules.any? %>
          <div style="display: flex; flex-direction: column; gap: var(--spacing-3);">
            <% @rules.each_with_index do |rule, index| %>
              <div class="flex-between" style="padding: var(--spacing-4); background: var(--color-neutral-100); border-radius: var(--radius-lg); border: 1px solid var(--color-neutral-300);">
                <div class="flex-start gap-3">
                  <div class="flex-center" style="width: 1.5rem; height: 1.5rem; background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700)); border-radius: 50%; color: white; font-size: var(--font-size-xs); font-weight: 600;">
                    <%= index + 1 %>
                  </div>
                  <div>
                    <div class="flex-start gap-2">
                      <span class="badge <%= case rule.type
                          when 'boolean'
                            rule.kill_switch? ? '' : 'badge-success'
                          when 'percentage_of_actors', 'group'
                            'badge-primary'
                          else
                            ''
                          end %>" style="<%= rule.type == 'boolean' && rule.kill_switch? ? 'background: var(--color-error-100); color: var(--color-error-800);' : '' %>">
                        <%= rule.type.humanize %>
                      </span>
                      <span style="font-size: var(--font-size-sm); font-weight: 500; color: var(--color-neutral-900);">
                        <%= rule.value %><% if rule.type == "percentage_of_actors" %>%<% end %>
                      </span>
                    </div>
                    <p style="font-size: var(--font-size-xs); color: var(--color-neutral-500); margin: var(--spacing-1) 0 0 0;"><%= t('common.created', default: 'Created') %> <%= time_ago_in_words(rule.created_at) %> <%= t('common.ago', default: 'ago') %></p>
                  </div>
                </div>

                <div class="flex-start gap-2">
                  <%= link_to edit_flag_rule_path(@flag, rule), class: "btn btn-ghost btn-xs" do %>
                    <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                    </svg>
                    <%= t('common.edit', default: 'Edit') %>
                  <% end %>
                  <%= button_to flag_rule_path(@flag, rule), method: :delete,
                      class: "btn btn-ghost btn-xs",
                      style: "color: var(--color-error-600); border-color: var(--color-error-300);",
                      form: { onsubmit: "return confirm('#{t('rules.delete_confirm', default: 'Are you sure?')}')" } do %>
                    <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    <%= t('common.delete', default: 'Delete') %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

          <div style="margin-top: var(--spacing-6); padding: var(--spacing-4); background: var(--color-primary-50); border-radius: var(--radius-lg); border: 1px solid var(--color-primary-200);">
            <div class="flex-start">
              <svg style="width: 1.25rem; height: 1.25rem; color: var(--color-primary-600); margin-right: var(--spacing-2);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <span style="font-size: var(--font-size-sm); color: var(--color-primary-800);">
                <strong><%= t('rules.evaluation_order', default: 'Evaluation Order') %>:</strong> <%= t('rules.evaluation_order_desc', default: 'Rules are processed from top to bottom. The first matching rule determines the flag behavior.') %>
              </span>
            </div>
          </div>
        <% else %>
          <div style="text-align: center; padding: var(--spacing-12) 0; border: 2px dashed var(--color-neutral-300); border-radius: var(--radius-lg);">
            <div class="flex-center" style="width: 4rem; height: 4rem; background: var(--color-neutral-100); border-radius: 50%; margin: 0 auto var(--spacing-4) auto;">
              <svg style="width: 2rem; height: 2rem; color: var(--color-neutral-400);" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
            </div>
            <h3 style="font-size: var(--font-size-lg); font-weight: 600; color: var(--color-neutral-900); margin: 0 0 var(--spacing-2) 0;"><%= t('rules.no_rules', default: 'No rules defined') %></h3>
            <p style="color: var(--color-neutral-600); margin: 0 0 var(--spacing-6) 0;"><%= t('rules.no_rules_desc', default: 'Start controlling your feature flag by adding evaluation rules') %></p>
            <%= link_to new_flag_rule_path(@flag), class: "btn btn-primary animate-scale" do %>
              <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
              </svg>
              <%= t('rules.add_first_rule', default: 'Add Your First Rule') %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- Navigation -->
  <nav style="margin-top: var(--spacing-8);" class="animate-fade-in">
    <%= link_to flags_path, class: "btn btn-secondary animate-scale" do %>
      <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0L2.586 11H9a1 1 0 100-2H2.586l3.707-3.707a1 1 0 00-1.414-1.414l-5.414 5.414a1 1 0 000 1.414l5.414 5.414a1 1 0 001.414 0z" clip-rule="evenodd"/>
      </svg>
      <%= t('flags.back_to_flags', default: 'Back to Feature Flags') %>
    <% end %>
  </nav>
</div>