<div class="page-container">
  <!-- Header Section -->
  <div class="page-header">
    <div class="gradient-header animate-fade-in">
      <div class="flex-between">
        <div>
          <h1 class="text-shadow" style="font-size: var(--font-size-3xl); font-weight: 700; margin: 0; margin-bottom: var(--spacing-2);">
            ðŸš© <%= t('nav.feature_flags') %>
          </h1>
          <p style="margin: 0; opacity: 0.9; margin-bottom: var(--spacing-4);">
            <%= t('flags.manage_description', default: 'Manage and control your application features with confidence') %>
          </p>
          <div class="flex-start gap-6" style="font-size: var(--font-size-sm); opacity: 0.8;">
            <div class="flex-start gap-2">
              <div style="width: 0.5rem; height: 0.5rem; background: rgba(255,255,255,0.7); border-radius: 50%;"></div>
              <span><%= t('flags.total', default: 'Total') %>: <%= @flags.count %></span>
            </div>
            <div class="flex-start gap-2">
              <div style="width: 0.5rem; height: 0.5rem; background: var(--color-success-400); border-radius: 50%;"></div>
              <span><%= t('flags.active', default: 'Active') %>: <%= @flags.select { |f| f.enabled? && f.rules.any? }.count %></span>
            </div>
            <div class="flex-start gap-2">
              <div style="width: 0.5rem; height: 0.5rem; background: var(--color-error-400); border-radius: 50%;"></div>
              <span><%= t('flags.disabled', default: 'Disabled') %>: <%= @flags.select { |f| !f.enabled? }.count %></span>
            </div>
          </div>
        </div>
        <div style="flex-shrink: 0;">
          <%= link_to new_flag_path, class: "btn btn-secondary animate-scale" do %>
            <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
            </svg>
            <%= t('flags.create_flag', default: 'Create Flag') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if @flags.any? %>
    <!-- Modern Cards Grid -->
    <section class="feature-grid animate-fade-in">
      <% @flags.each do |flag| %>
        <div class="feature-card animate-slide-up">
          <div class="feature-card-body">
            <!-- Flag Header -->
            <div class="flex-between" style="margin-bottom: var(--spacing-4); align-items: flex-start;">
              <div style="flex: 1;">
                <h3 style="font-size: var(--font-size-lg); font-weight: 600; color: var(--color-neutral-800); margin: 0 0 var(--spacing-1) 0;">
                  <%= flag.name %>
                </h3>
                <p class="truncate" style="font-size: var(--font-size-sm); color: var(--color-neutral-600); margin: 0;">
                  <%= truncate(flag.description, length: 80) %>
                </p>
              </div>

              <!-- Status Badge -->
              <div style="flex-shrink: 0; margin-left: var(--spacing-4);">
                <% if !flag.enabled? %>
                  <span class="badge" style="background: var(--color-error-100); color: var(--color-error-700);">
                    <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <%= t('flags.disabled', default: 'Disabled') %>
                  </span>
                <% elsif flag.rules.any? %>
                  <span class="badge badge-success">
                    <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <%= t('flags.active', default: 'Active') %>
                  </span>
                <% else %>
                  <span class="badge" style="background: var(--color-neutral-100); color: var(--color-neutral-700);">
                    <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    <%= t('flags.no_rules', default: 'No Rules') %>
                  </span>
                <% end %>
              </div>
            </div>

            <!-- Rules Info -->
            <div style="margin-bottom: var(--spacing-4);">
              <div class="flex-between" style="font-size: var(--font-size-sm); align-items: center;">
                <span style="color: var(--color-neutral-500);"><%= t('flags.rules', default: 'Rules') %></span>
                <span class="badge <%= flag.rules.any? ? 'badge-primary' : '' %>" <%= flag.rules.count == 0 ? 'style="background: var(--color-neutral-100); color: var(--color-neutral-600);"' : '' %>>
                  <% if flag.rules.any? %>
                    <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"/>
                    </svg>
                  <% else %>
                    <svg style="width: 0.75rem; height: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                  <% end %>
                  <%= pluralize(flag.rules.count, 'rule') %>
                </span>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="feature-card-actions">
            <div class="flex-start gap-2">
              <%= link_to flag, class: "btn btn-ghost btn-sm" do %>
                <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                </svg>
                <%= t('common.view', default: 'View') %>
              <% end %>

              <%= link_to edit_flag_path(flag), class: "btn btn-ghost btn-sm" do %>
                <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                </svg>
                <%= t('common.edit', default: 'Edit') %>
              <% end %>
            </div>

            <%= link_to flag, method: :delete, data: { confirm: t('flags.delete_confirm', default: 'Are you sure you want to delete this flag?') },
                       class: "btn btn-ghost btn-sm", style: "color: var(--color-error-600); border-color: var(--color-error-300);" do %>
              <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <%= t('common.delete', default: 'Delete') %>
            <% end %>
          </div>
        </div>
      <% end %>
    </section>
  <% else %>
    <!-- Empty State -->
    <section class="flex-center animate-fade-in" style="padding: var(--spacing-16) 0;">
      <div class="card" style="max-width: 32rem; margin: 0 auto; text-align: center;">
        <div class="card-body">
          <div class="flex-center" style="width: 5rem; height: 5rem; background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600)); border-radius: 50%; margin: 0 auto var(--spacing-6) auto;">
            <svg style="width: 2.5rem; height: 2.5rem; color: white;" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
            </svg>
          </div>

          <h3 style="font-size: var(--font-size-xl); font-weight: 600; color: var(--color-neutral-800); margin: 0 0 var(--spacing-3) 0;">
            <%= t('flags.empty_state.title', default: 'No feature flags yet') %>
          </h3>
          <p style="color: var(--color-neutral-600); margin: 0 0 var(--spacing-8) 0;">
            <%= t('flags.empty_state.description', default: 'Get started by creating your first feature flag to control your application features.') %>
          </p>

          <%= link_to new_flag_path, class: "btn btn-primary animate-scale" do %>
            <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
            </svg>
            <%= t('flags.empty_state.cta', default: 'Create Your First Flag') %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>
</div>