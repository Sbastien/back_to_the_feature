<div class="page-container" style="max-width: 64rem;">
  <!-- Header Section -->
  <div class="page-header">
    <div class="gradient-header animate-fade-in">
      <div class="flex-between">
        <div>
          <h1 class="text-shadow" style="font-size: var(--font-size-3xl); font-weight: 700; margin: 0; margin-bottom: var(--spacing-2);">
            ⚙️ <%= t('rules.edit_rule', default: 'Edit Rule for') %> <%= @flag.name %>
          </h1>
          <p style="margin: 0; opacity: 0.9;">
            <%= t('rules.edit_description', default: 'Update the configuration for this rule') %>
          </p>
        </div>
        <div style="flex-shrink: 0;">
          <div class="flex-center" style="width: 4rem; height: 4rem; background: rgba(255,255,255,0.2); border-radius: var(--radius-xl); transform: rotate(3deg);">
            <svg style="width: 2rem; height: 2rem; color: white;" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= form_with model: [@flag, @rule], local: true, class: "animate-fade-in", style: "display: flex; flex-direction: column; gap: var(--spacing-8);", data: { controller: "rule-form" } do |form| %>
    <% if @rule.errors.any? %>
      <div class="card" style="background: var(--color-error-50); border-color: var(--color-error-200);">
        <div class="card-body" style="padding: var(--spacing-6);">
          <div class="flex-start">
            <div style="flex-shrink: 0;">
              <svg style="width: 1.25rem; height: 1.25rem; color: var(--color-error-500);" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div style="margin-left: var(--spacing-3);">
              <h3 style="font-size: var(--font-size-sm); font-weight: 500; color: var(--color-error-700); margin: 0; margin-bottom: var(--spacing-2);">
                <%= t('errors.form_errors', default: 'There were errors with your submission:') %>
              </h3>
              <div style="font-size: var(--font-size-sm); color: var(--color-error-600);">
                <ul style="list-style: disc; padding-left: var(--spacing-5); margin: 0; display: flex; flex-direction: column; gap: var(--spacing-1);">
                  <% @rule.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Rule Configuration Card -->
    <div class="card animate-slide-up">
      <div class="card-body">
        <div class="flex-start" style="margin-bottom: var(--spacing-6);">
          <div class="flex-center" style="width: 2.5rem; height: 2.5rem; background: linear-gradient(135deg, var(--color-neutral-600), var(--color-neutral-700)); border-radius: var(--radius-lg); margin-right: var(--spacing-4);">
            <svg style="width: 1.25rem; height: 1.25rem; color: white;" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div>
            <h3 class="card-title"><%= t('rules.rule_configuration', default: 'Rule Configuration') %></h3>
            <p class="card-description"><%= t('rules.edit_configuration_desc', default: 'Update the type and value for this rule') %></p>
          </div>
        </div>

        <div style="display: flex; flex-direction: column; gap: var(--spacing-6);">
          <div class="form-group">
            <%= form.label :type, t('rules.rule_type', default: 'Rule Type'), class: "form-label" %>
            <%= form.select :type,
                options_for_select([
                  [t('rules.percentage_type', default: 'Percentage of Actors'), "percentage_of_actors"],
                  [t('rules.group_type', default: 'Group'), "group"]
                ], @rule.type),
                {},
                { class: "form-select #{@rule.errors[:type].any? ? 'error' : ''}",
                  data: { "rule-form-target": "type", action: "change->rule-form#showValueField" } } %>
            <% if @rule.errors[:type].any? %>
              <div class="form-error">
                <svg style="width: 1rem; height: 1rem;" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <%= @rule.errors[:type].first %>
              </div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :value, t('rules.rule_value', default: 'Rule Value'), class: "form-label" %>


            <!-- Percentage value -->
            <div data-rule-form-target="percentageValue" style="display: <%= @rule.type == 'percentage_of_actors' ? 'block' : 'none' %>;">
              <%= form.number_field :value,
                  placeholder: t('rules.percentage_placeholder', default: 'Enter percentage (0-100)'),
                  min: 0, max: 100,
                  class: "form-input #{@rule.errors[:value].any? ? 'error' : ''}",
                  data: { "rule-form-target": "percentageInput" } %>
              <div class="form-help">
                <%= t('rules.percentage_help', default: 'Percentage of users who will see this flag (0-100)') %>
              </div>
            </div>

            <!-- Group value -->
            <div data-rule-form-target="groupValue" style="display: <%= @rule.type == 'group' ? 'block' : 'none' %>;">
              <%= form.select :value,
                  options_from_collection_for_select(Group.all, :name, :name, @rule.value),
                  {},
                  { class: "form-select #{@rule.errors[:value].any? ? 'error' : ''}",
                    data: { "rule-form-target": "groupInput" } } %>
              <div class="form-help">
                <%= t('rules.group_help', default: 'Users matching the selected group will see this flag.') %>
                <%= link_to t('rules.manage_groups', default: 'Manage groups'), groups_path, style: "color: var(--color-primary-600); text-decoration: underline;" %>
              </div>
            </div>

            <% if @rule.errors[:value].any? %>
              <div class="form-error">
                <svg style="width: 1rem; height: 1rem;" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <%= @rule.errors[:value].first %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex-between animate-slide-up" style="padding-top: var(--spacing-6);">
      <%= link_to @flag, class: "btn btn-secondary animate-scale" do %>
        <svg class="nav-icon" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0L2.586 11H9a1 1 0 100-2H2.586l3.707-3.707a1 1 0 00-1.414-1.414l-5.414 5.414a1 1 0 000 1.414l5.414 5.414a1 1 0 001.414 0z" clip-rule="evenodd"/>
        </svg>
        <%= t('common.cancel', default: 'Cancel') %>
      <% end %>

      <%= form.submit t('rules.update_rule', default: 'Update Rule'),
                      class: "btn btn-primary animate-scale" %>
    </div>
  <% end %>
</div>

