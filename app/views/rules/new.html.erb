<div class="px-4 sm:px-6 lg:px-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Add Rule to <%= @flag.name %>
      </h2>
    </div>
  </div>

  <div class="mt-8">
    <%= form_with model: [@flag, @rule], local: true, class: "space-y-6" do |form| %>
      <% if @rule.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There were errors with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @rule.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
        <div class="md:grid md:grid-cols-3 md:gap-6">
          <div class="md:col-span-1">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Rule Configuration</h3>
            <p class="mt-1 text-sm text-gray-500">
              Choose the type of rule and configure its value.
            </p>
          </div>
          <div class="mt-5 md:mt-0 md:col-span-2">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-6">
                <%= form.label :type, class: "block text-sm font-medium text-gray-700" %>
                <%= form.select :type,
                    options_for_select([
                      ["Boolean (On/Off)", "boolean"],
                      ["Percentage of Actors", "percentage_of_actors"],
                      ["Group", "group"]
                    ], @rule.type),
                    { prompt: "Select rule type" },
                    { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                      onchange: "toggleValueField()" } %>
              </div>

              <div class="col-span-6">
                <%= form.label :value, class: "block text-sm font-medium text-gray-700" %>

                <!-- Boolean value -->
                <div id="boolean-value" class="mt-1" style="display: none;">
                  <%= form.select :value,
                      options_for_select([["On", "on"], ["Off", "off"]], @rule.value),
                      { prompt: "Select on or off" },
                      { class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
                </div>

                <!-- Percentage value -->
                <div id="percentage-value" class="mt-1" style="display: none;">
                  <%= form.number_field :value,
                      placeholder: "Enter percentage (0-100)",
                      min: 0, max: 100,
                      class: "block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
                  <p class="mt-2 text-sm text-gray-500">Percentage of users who will see this flag (0-100)</p>
                </div>

                <!-- Group value -->
                <div id="group-value" class="mt-1" style="display: none;">
                  <%= form.select :value,
                      options_from_collection_for_select(Group.all, :name, :name, @rule.value),
                      { prompt: "Select a group" },
                      { class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
                  <p class="mt-2 text-sm text-gray-500">
                    Users matching the selected group will see this flag.
                    <%= link_to "Manage groups", groups_path, class: "text-indigo-600 hover:text-indigo-500" %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", @flag, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= form.submit "Create Rule", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>

<script>
function toggleValueField() {
  const typeSelect = document.querySelector('#rule_type');
  const booleanValue = document.querySelector('#boolean-value');
  const percentageValue = document.querySelector('#percentage-value');
  const groupValue = document.querySelector('#group-value');

  // Hide all value fields
  booleanValue.style.display = 'none';
  percentageValue.style.display = 'none';
  groupValue.style.display = 'none';

  // Show the appropriate field based on type
  switch(typeSelect.value) {
    case 'boolean':
      booleanValue.style.display = 'block';
      break;
    case 'percentage_of_actors':
      percentageValue.style.display = 'block';
      break;
    case 'group':
      groupValue.style.display = 'block';
      break;
  }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
  toggleValueField();
});
</script>